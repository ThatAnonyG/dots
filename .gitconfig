[init]
	defaultBranch = main
[user]
	name = Ratul Saha
	email = contact@ratulsaha.me
[core]
  editor = nvim
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  side-by-side = true
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[safe]
	directory = *
